<% include ../partials/header %>
<h3>Show Zoo's Animals</h3>
  <p>
    <%= zoo.name%> <%= zoo.location%>'s animals:
    <% animals.forEach(function(animal){ %>
      <p>
        <a href="/zoos/<%= zoo._id%>/animals/<%= animal.id%>" class ="btn btn-info"><%= animal.name%></a>
      </p>
    <% })%>
  </p>
  <p>
      <a href="/zoos/<%= zoo._id%>/animals/new" class ="btn btn-success">Add Animal</a>
  </p>
  <p>
    <a href="/zoos/<%= zoo._id%>/edit" class ="btn btn-info">Edit Zoo</a>
    <form action="/zoos/<%= zoo._id%>?_method=DELETE" method="POST">
      <input type="submit" value="DELETE" class ="btn btn-warning">
    </form>
  </p>
  <p>
    <a href="/zoos" class ="btn btn-default">See All Zoos</a>
  </p>
<% include ../partials/footer %>
